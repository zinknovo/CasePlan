{
  "id": null,
  "uid": "caseplan-overview",
  "title": "CasePlan Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Target Up",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "up{job=\"caseplan\"}", "refId": "A" }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "App Uptime (s)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "process_uptime_seconds{application=\"caseplan\"}", "refId": "A" }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Total HTTP Requests",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sum(http_server_requests_seconds_count{application=\"caseplan\"})", "refId": "A" }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "HTTP RPS (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"caseplan\"}[5m])) or vector(0)",
          "legendFormat": "rps",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "HTTP Avg Latency (ms, 5m)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "fieldConfig": {
        "defaults": { "unit": "ms" }
      },
      "targets": [
        {
          "expr": "(sum(rate(http_server_requests_seconds_sum{application=\"caseplan\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"caseplan\"}[5m])) * 1000) or vector(0)",
          "legendFormat": "avg",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "JVM Heap Used",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{application=\"caseplan\",area=\"heap\"})",
          "legendFormat": "heap used",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Hikari Active Connections",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"caseplan\"}",
          "legendFormat": "active",
          "refId": "A"
        }
      ]
    }
  ]
}
